<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="blue_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="common_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:background">@color/input</item>
    </style>

    <style name="input_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/shape_layout_input</item>
    </style>

    <style name="normal_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="bold_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CircularImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


<!--    search-->
    <style name="edittext_search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="layout_search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">6dp</item>
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:background">@drawable/shape_layout_rounded_horizontal</item>
    </style>

</resources>