<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="blue_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="edittext_light_blue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:background">@color/light_blue</item>
    </style>

    <style name="edittext_grey">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:background">@color/grey</item>
    </style>

    <style name="layout_light_blue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/shape_layout_rounded_10dp</item>
        <item name="android:backgroundTint">@color/light_blue</item>
    </style>

    <style name="layout_grey">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/shape_layout_rounded_10dp</item>
        <item name="android:backgroundTint">@color/grey</item>
    </style>

    <style name="text_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="text_bold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="text_medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CircularImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


</resources>