<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.product_details.ProductDetailsActivity">


    <ScrollView
        android:id="@+id/sv_product_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_order">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp_image"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:text="Tên sản phẩm"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:text="0 Đ"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:fontFamily="@font/montserrat_bold"/>

            <TextView
                android:id="@+id/tv_sale_price"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:text="100.000 Đ"
                android:textColor="@color/red"
                android:textSize="26sp"
                android:visibility="gone"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginBottom="-10dp"/>

            <TextView
                android:id="@+id/tv_old_price"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:text="100.000 Đ"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:visibility="gone"
                android:fontFamily="@font/montserrat_bold"
                />


            <TextView
                android:id="@+id/tv_stock"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:text="Còn:  "
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_mono_medium"/>

<!--            Đánh giá-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp">

                <RatingBar
                    android:id="@+id/rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:isIndicator="true"
                    style="?android:attr/ratingBarStyleIndicator" />

                <TextView
                    android:id="@+id/tv_rating"
                    style="@style/text_medium"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Chưa có đánh giá"
                    android:textSize="18sp" />

            </LinearLayout>

<!--            Mô tả-->
                <TextView
                    android:id="@+id/tv_lable_description"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Mô tả"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:layout_marginHorizontal="16dp"
                    android:fontFamily="@font/roboto_mono_medium"/>

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:justificationMode="inter_word"
                    android:textAlignment="viewStart"
                    android:layout_width="match_parent"
                    android:text="@{productDetailsViewModel.description}"
                    android:layout_marginHorizontal="16dp"/>






            <TextView
                android:id="@+id/tv_lable_feedback"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:text="Bình luận"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:fontFamily="@font/roboto_mono_medium"/>

            <TextView
                android:id="@+id/tv_message_feedback"
                style="@style/text_normal"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="4dp"
                android:text="Chưa có bình luận"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="gone"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="4dp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/btn_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/shape_layout_rounded_horizontal"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/sv_product_info">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_shopping_cart_24px"
            android:layout_marginRight="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            style="@style/text_bold"
            android:text="Thêm vào giỏ hàng"
            android:textColor="@color/white"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>