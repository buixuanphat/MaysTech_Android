<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.product_details.ProductDetailsActivity">


    <ScrollView
        android:id="@+id/sv_product_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp_image"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/text_medium"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:text="Tên sản phẩm"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_price"
                style="@style/text_bold"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:text="100.000 Đ"
                android:textColor="@color/black"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/tv_sale_price"
                style="@style/text_bold"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:text="100.000 Đ"
                android:textColor="@color/red"
                android:textSize="26dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_old_price"
                style="@style/text_normal"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:text="100.000 Đ"
                android:textColor="@color/dark_gray"
                android:textSize="16dp"
                android:visibility="gone"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:isIndicator="true" />

                <TextView
                    android:id="@+id/tv_rating"
                    style="@style/text_medium"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="22sp" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_order"
                style="@style/blue_button"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:text="Thêm vào giỏ hàng" />

            <TextView
                android:id="@+id/tv_lable_feedback"
                style="@style/text_bold"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:text="Đánh giá từ người dùng"
                android:textColor="@color/black"
                android:textSize="20dp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tv_lable_description"
                style="@style/text_bold"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:text="Mô tả"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_description"
                style="@style/text_normal"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:text="@{productDetailsViewModel.description}" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>